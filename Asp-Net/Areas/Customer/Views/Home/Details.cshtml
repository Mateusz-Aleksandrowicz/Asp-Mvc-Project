@using Asp_Net.Models.ViewModels
@model ShoppingCart

<form method="post">
    <input asp-for="ProductId" hidden />
<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">@Model.Product.Name</h3>
            <h6 class="card-subtitle pt-2" >@Model.Product.Category.Name</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6 pt-4">
                    <div><img width="100%" src="@Model.Product.ImageUrl" ></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Product description</h4>
                    <p>@Model.Product.Description</p>
                    <h2 class="mt-5">
                        @Model.Product.ListPrice$
                    </h2>
                    <button type="submit" value="Add to Cart" class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="">Add to Cart</button>
                    <a asp-action="Index" class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" >
                        Back to List
                    </a>
                    <div class="row pl-2 pt-4">
                        <div class="col-2 text-primary"><h4>Count</h4></div>
                        <div class="col-6"><input asp-for="Count" class="form-control" /></div>
                    </div>
                    <h3 class="box-title mt-5">Prizes:</h3>
                    <ul class="list-unstyled">  
                        <li>Quantity 1-50 : @Model.Product.Price.ToString("c")</li>
                        <li>Quantity 50-100 : @Model.Product.Price50.ToString("c")</li>
                        <li>Quantity 100+ : @Model.Product.Price100.ToString("c")</li>
                    </ul>   
                </div>
            </div>
        </div>
    </div>
</div>
</form>
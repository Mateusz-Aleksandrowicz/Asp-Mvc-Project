@model Asp_Net.Models.ViewModels.ShoppingCartVM

<form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container">
                <div class="card">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6 pt-2">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 text-end">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                        </div>
                    </div>
                      
                    <div class="card-body">                    
                        <div class="row">
                            @foreach(var item in Model.ListCart)
                            {
                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                    <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                                </div>
                                <div class="col-12 pt-2 text-sm-start col-lg-6 text-lg-left">
                                    <h5><strong>@item.Product.Name</strong></h5>
                                    <p><small>@item.Product.Description</small></p>
                                </div>
                                <div class="col-12 text-sm-center col-lg-5 text-lg-right row">
                                    <div class="col-6 pt-4">
                                        <h6><strong>@item.Price.ToString("c")<span class="text-muted">&nbsp; x &nbsp;</span>@item.Count</strong></h6>
                                    </div>
                                    <div class="col-6 col-sm-4 pt-2 ">
                                        <div class="float-end mx-1">
                                            <button asp-action="plus" asp-route-cartId="@item.Id" class="btn btn-success">
                                                <i class="bi bi-plus-square"></i>
                                            </button>
                                        </div>
                                        <div class="float-end mx-1">
                                         <button asp-action="minus" asp-route-cartId="@item.Id" class="btn btn-warning">
                                                <i class="bi bi-dash-square"></i>
                                         </button>
                                        </div>
                                 </div>
                                 <div class="col-2 col-sm-4 col-lg-2 text-end pt-2">
                                        <button asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            <hr />
                            }
                    <div class="row">
                            <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4 pb-4">
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <span class="text-info"> Total (ZŁ)</span>
                                        <strong class="text-info"><span id="txtOrderTotal">@Model.Total.ToString("c")</span></strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="card-footer row">                        
                                <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                                    <a class="btn btn-success form-control">Summary</a>
                                </div>
                        </div>
                    </div>
                </div>               
            </div>
        </div>
</form>
